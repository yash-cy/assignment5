    <div class="board">
        <div class="formContainer">
            <h1>Update Blog</h1>
            <form method="post" action="/admin/dashboard/edit-blog/{{blog._id}}">
                <div class="form-group">
                    <label for="exampleInputEmail1  text-dark" style="font-size: 20px; font-weight: 500;">Title</label>
                    <input class="form-control" type="text" style="height: 50px;" value="{{blog.title}}" required
